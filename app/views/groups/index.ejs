<div class="bs-docs-section">
   <div class="row">
      <div class="col-lg-12">
         <div class="page-header col-lg-3">
            <h1 id="user_tables">Groups</h1>
         </div>
         <div class="new-group col-lg-3">
            <a href="/new-groups" class="btn btn-success">Create New Group</a>
         </div>
         <div class="col-lg-12 users-hr">
            <hr/>
         </div>
         <div class="bs-component">
            <table class="table table-striped table-hover ">
               <thead>
                  <tr>
                     <th>Name</th>
                     <th>Users</th>
                     <th>Actions</th>
                  </tr>
               </thead>
               <tbody id="group_list">
                 <% for(var i=0; i<groups.length; i++) { %>
                   <tr data-group_id="<%= groups[i].id %>">
                     <td class="col-md-2"><%= groups[i].name %></td>
                     <td class="col-md-8"><%= groups[i].email %></td>
                     <td class="col-md-1"><a href="/group/<%= groups[i]._id%>/edit" class="btn btn-success">Edit</a></td>
                   </tr>
                  <% } %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>