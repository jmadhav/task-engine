<div class="row">
  <div class="col-lg-5 col-sm-offset-3" id="upload">
    <div class="well bs-component">
      <form class="form-horizontal" action="/upload" method="post" enctype="multipart/form-data">
        <fieldset>
          <legend>Upload</legend>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">File:</label>
            <div class="col-lg-10">
              <input type="file" name="file" accept=".xls,.xlsx" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Date:</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="datepicker" placeholder="mm/dd/yyyy" name="date" value=""  required>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
         </fieldset>
      </form>
    </div>
  </div>
</div>
