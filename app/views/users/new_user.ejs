<div class="row">
  <div class="col-lg-5 col-sm-offset-3" id="login">
    <div class="well bs-component">
      <form class="form-horizontal" id="loginForm" action="/new-users" method="post">
        <fieldset>
          <legend>New User</legend>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" id="inputName" placeholder="Name" name="user[name]" value="" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="user[email]" value="" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="user[password]" value="" required>
            </div>
          </div>
          <div class="form-group" id="ConfirmPassword">
            <label for="inputConfirmPassword" class="col-lg-2 control-label">Confirm Password</label>
            <div class="col-lg-10">
              <label class="control-label" id="ConfirmPasswordLabel">Passwords do not match.</label>
              <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Password" name="user[confirmpassword]" required>
            </div>
          </div>
          <div class="form-group">
            <label for="inputRole" class="col-lg-2 control-label">Group</label>
            <div class="col-lg-10 chooseGroupUser">
            </div>
          </div>
          <div class="form-group">
            <label for="inputRole" class="col-lg-2 control-label">Roles</label>
            <div class="col-lg-10">
              <div class="checkbox">
                <input type="checkbox" class="role_checkbox" name="user[roles][]" data-role="Lead"> Lead
              </div>
              <div class="checkbox">
                <input type="checkbox" class="role_checkbox" name="user[roles][]" data-role="Analyst"> Analyst
              </div>
              <div class="checkbox">
                <input type="checkbox" class="role_checkbox" name="user[roles][]" data-role="Moderator"> Moderator
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
         </fieldset>
      </form>
    </div>
  </div>
</div>
