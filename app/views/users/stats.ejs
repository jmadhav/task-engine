<div class="row">
   <div class="col-lg-4" style="margin-left: -100px;">
      <div class="bs-component">
        <form class="form-horizontal"> 
            <div class="form-group">
				      <label for="selectOptions" class="col-lg-5 control-label">Select group:</label>
      				<div class="col-lg-7">
      					<select id="stat-group-select">
                  <option selected disabled>Select Group</option>
                    <% for(var i=0; i<groups.length; i++) { %>
                      <option value="<%= groups[i]["_id"] %>"  <% if( locals.group_id && group_id == groups[i]["_id"]) { %> selected <% } %>><%= groups[i].name %></option>
                    <% } %>
                  </select>
      				</div>
			      </div>
          </form>
      </div>
   </div>
   <div class="clearfix"></div>
   <% var group_id = group_id || ""  %>
   <div class="col-lg-4" style="margin-left: -100px;">
      <form action="/stats" method="get" class="form-horizontal">
         <input type="hidden" name="id" value="<%= group_id %>">
         <div class="form-group">
            <label for="fromDate" class="col-lg-5 control-label">From Date:</label>
            <div class="col-lg-7">
               <input type="text" id="dashboardFromDate" class="form-control datepicker" placeholder="yyyy-mm-dd" name="fromDate" value="<% if (locals.get_from_date) { %><%=get_from_date%><% } %>" autocomplete="off">
            </div>
         </div>
         <div class="form-group">
            <label for="toDate" class="col-lg-5 control-label">To Date:</label>
            <div class="col-lg-7">
               <input type="text" id="dashboardToDate" class="form-control datepicker" placeholder="yyyy-mm-dd" name="toDate" value="<% if (locals.get_to_date) { %><%=get_to_date%><% } %>" autocomplete="off">
            </div>
         </div>
         <div class="form-group" id="userSelectBox">
              <label for="users" class="col-lg-5 control-label">User:</label>
              <div class="col-lg-7">
                 <select class="form-control" id="usersSelectList" name="user_id">
                    <option value="">Select User</option>
                 </select>
              </div>
         </div>
         <div class="form-group">
            <label for="users" class="col-lg-5 control-label">&nbsp;</label>
            <div class="col-lg-7">
               <button type="submit" id="dashboard_sbmit_btn" class="btn btn-success">View Statistics</button>
            </div>
         </div>
      </form>
   </div>
   <div id="TaskPieChart" data-tasks-object="<%= locals.tasks_object %>">
     <div class="col-lg-4" style="margin-top: -48px;">
        <div class="row">
          <h6 style="margin-left:44px">Tasks correct or incorrect</h6>
          <div id="chart1" data-tasksApprovedchart="" style="margin-top:20px; margin-left:20px; width:300px; height:300px;"></div>
        </div>
     </div>

     <div class="col-lg-4" style="margin-top: -48px;">
        <div class="row">
          <h6 style="margin-left:44px" >Tasks reviewed and to be reviewed by Moderator</h6>
          <div id="chart2" data-tasksReviewedchart="" style="margin-top:20px; margin-left:20px; width:300px; height:300px;"></div>
        </div>
     </div>
   </div>
</div>
<hr/>
<div class="row" id="userPerformaceDashboard">
   <div class="col-lg-12">
      <div class="row">
        <div id="chart3"></div>
      </div>
   </div>
</div>